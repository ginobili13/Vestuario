<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}tallas vestuario{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        {% endblock %}
    </head>
    <body>
        {% block body %}
            <div class="container">
                        <form action="">
                            <legend>tallas vestuario</legend>
                            <div class="row">
                                    <div class="col col-xs-2">
                                        <div class="form-group">
                                            <label for="camisetaMc">Camiseta MC</label>
                                            <input type="text" class="form-control" id="camisetaMc" name="camiseta_mc">
                                        </div>
                                        <div class="form-group">
                                            <label for="camisetaMl">Camiseta ML</label>
                                            <input type="text" class="form-control" id="camisetaMl" name="camiseta_ml">
                                        </div>
                                        <div class="form-group">
                                            <label for="forroPolar">Forro Polar</label>
                                            <input type="text" class="form-control" id="forroPolar" name="forro_polar">
                                        </div>
                                        <div class="form-group">
                                            <label for="poloHombreMl">Polo Hombre ML</label>
                                            <input type="text" class="form-control" id="poloHombreMl" name="polo_hombre_ml">
                                        </div>
                                        <div class="form-group">
                                            <label for="poloHombreMc">Polo Hombre MC</label>
                                            <input type="text" class="form-control" id="poloHombreMc" name="polo_hombre_mc">
                                        </div>
                                    </div>
                                    <div class="col col-xs-2">
                                        <div class="form-group">
                                            <label for="poloMujerMl">Polo Mujer ML</label>
                                            <input type="text" class="form-control" id="poloMujerMl" name="polo_mujer_ml">
                                        </div>
                                        <div class="form-group">
                                            <label for="poloMujerMc">Polo Mujer MC</label>
                                            <input type="text" class="form-control" id="poloMujerMc" name="polo_mujer_ml">
                                        </div>
                                        <div class="form-group">
                                            <label for="cortavientos">Cortavientos</label>
                                            <input type="text" class="form-control" id="cortavientos" name="cortavientos">
                                        </div>
                                        <div class="form-group">
                                            <label for="zapatos">Zapatos</label>
                                            <input type="text" class="form-control" id="zapatos" name="zapatos">
                                        </div>
                                    <div class="form-group">
                                        <label for="chaleco">Chaleco</label>
                                        <input type="text" class="form-control" id="chaleco" name="chaleco">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                    <button type="submit" class="btn btn-success">Modificar</button>
                            </div>
                        </form>
            </div>
        {% endblock %}
    </body>
</html>
