<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}tallas vestuario{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        {% endblock %}
    </head>
    <body>
        {% block body %}
            <div class="container">
                        <form id="sizeForm" action="/set/userSize/{{ userId }}">
                            <legend>tallas vestuario</legend>
                            <div class="row">
                                <div class="col-md-4" id="box1"></div>
                                <div class="col-md-4" id="box2"></div>
                                <div class="col-md-4"></div>
                            </div>
                            <div class="row">
                                <div class="col-md-7">
                                    <button type="submit" class="btn btn-success item form-control">Modificar</button>
                                </div>
                            </div>
                            <input id="userId" type="hidden" value="{{ userId }}"/>
                        </form>
            </div>
        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
            <script src="{{ asset('js/userSize.js') }}" type="text/javascript"></script>
        {% endblock %}
        {% endblock %}
    </body>
</html>
