<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}tallas de usuario{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
            <link rel="stylesheet" href="{{ asset('css/headerCss.css') }}" type="text/css">
        {% endblock %}
    </head>
    <body>
    <nav class="navbar">
        <img src="/img/pccom.png" id="ihf-logo">
        <ul>
            <a href="/index"><li>Home</li></a>
            <a style="cursor: not-allowed;" id="sizes" class="active" disabled><li>Tallas</li></a>
            <a style="cursor: not-allowed;" id="deliveries" disabled><li>Vestuario</li></a>
        </ul>
    </nav>
        {% block body %}
            <div class="container">
                        <form id="sizeForm" action="/set/userSize/{{ userId }}">
                            <h3>tallas de usuario</h3>
                            <hr>
                            <div class="row">
                                <div class="col-md-4 col-md-offset-3" id="box1"></div>
                                <div class="col-md-4" id="box2"></div>
                            </div>
                            <div class="row">
                                <div class="col-md-7 col-md-offset-3">
                                    <button type="submit" class="btn item form-control" style="width: 92%; margin-top:40px">Modificar</button>
                                </div>
                            </div>
                            <input id="userId" type="hidden" value="{{ userId }}"/>
                        </form>
            </div>
        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
            <script src="{{ asset('js/userSize.js') }}" type="text/javascript"></script>
        {% endblock %}
        {% endblock %}
    </body>
</html>
