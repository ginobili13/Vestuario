<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}entrega de vestuario{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        {% endblock %}
    </head>
    <body>
        {% block body %}
            <div class="container">
                        <form id="deliveryForm" action="/create/delivery/{{ userId }}">
                            <legend>Entrega de Vestuario</legend>
                            <div class="row">
                                    <div class="col col-xs-2">
                                        <div class="form-group">
                                            <label for="date">Fecha</label>
                                            <input type="date" class="form-control" id="date" name="fecha">
                                        </div>
                                    </div>
                                    <div class="col col-xs-2">
                                        <div class="form-group">
                                            <label for="clothe">Prenda</label>
                                            <select name="ropa" id="clothe" class="form-control">
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col col-xs-2">
                                        <div class="form-group">
                                            <label for="quantity">Cantidad</label>
                                            <input type="number" class="form-control" id="quantity" name="cantidad">
                                        </div>
                                    </div>
                            </div>
                            <div class="row">
                                    <button type="submit" class="btn btn-success">AÃ±adir</button>
                            </div>
                                <input type="hidden" value="{{ userId }}"/>
                        </form>
            </div>
        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
            <script src="{{ asset('js/userDelivery.js') }}" type="text/javascript"></script>
        {% endblock %}
        {% endblock %}
    </body>
</html>
