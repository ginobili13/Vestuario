<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}lista de usuarios{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
            <link rel="stylesheet" href="{{ asset('css/headerCss.css') }}" type="text/css">
            <style>
                .row tbody tr.highlight td {
                    background-color: #ccc;
                }
            </style>
        {% endblock %}
    </head>
    <body>
    <nav class="navbar">
        <img src="/img/pccom.png" id="ihf-logo">
        <ul>
            <a href="/index" class="active"><li>Home</li></a>
            <a style="cursor: not-allowed;" id="sizes" disabled><li>Tallas</li></a>
            <a style="cursor: not-allowed;" id="deliveries" disabled><li>Vestuario</li></a>
        </ul>
    </nav>
        {% block body %}
            <h3>Listado de usuarios</h3>
            <hr style="width: 70%">
            <div class="container-fluid" style="margin-top: 20px">
                <div class="row">
                    <div class="col-md-2 col-md-offset-1"><label>Nombre trabajador: <input type="search" id="search_by_name" placeholder="Buscar por nombre" class="form-control"></label></div>
                    <div class="col-md-2"><label>Cod. Trabajador: <input type="search" id="search_by_code_employee" placeholder="Buscar por id" class="form-control"></label></div>
                    <div class="col-md-2"><label>Dpto: <input type="search" id="search_by_departament" placeholder="Departamento" class="form-control"></label></div>
                    <div class="col-md-2"><label>Sub-Dpto: <input type="search" id="search_by_subDepartment" placeholder="SubDepartamento" class="form-control"></label></div>
                    <div class="col-md-1">
                        <label>Mostrar</label>
                        <select name="totalPerPage" class="form-control">
                            <option value="10">10</option>
                            <option value="25">25</option>
                            <option value="50">50</option>
                            <option value="100">100</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <table id="tableUsers" style="margin-top:60px" class="display table table-striped">
                            <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Imagen</th>
                                <th scope="col">NIF</th>
                                <th scope="col">Trabajador</th>
                                <th scope="col">Cod. Trab</th>
                                <th scope="col">N.Seg Social</th>
                                <th scope="col">Fecha primer CCT</th>
                                <th scope="col">Fecha Antigüedad</th>
                                <th scope="col">Fecha Vencimiento CCT</th>
                                <th scope="col">Posible renovacion</th>
                                <th scope="col">Departamento</th>
                                <th scope="col">Sub-Departamento</th>
                                <th scope="col">Días disponibles vacaciones</th>
                                <th scope="col">Días pendientes solicitar</th>
                                <th scope="col">telefono</th>
                            </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="row" style="margin-top: 20px;">
                    <div class="col-md-10 col-md-offset-4">
                        <div id="history" style="display: none">
                            <table id="tableClothe" class="table table-striped" id="tableClothe" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>Fecha</th>
                                        <th>Prenda</th>
                                        <th>Cantidad</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
            <script src="{{ asset('js/userIndex.js') }}" type="text/javascript"></script>
        {% endblock %}
        {% endblock %}
    </body>
</html>
